<% extend('./base') %>

<h1>Register</h1>
<form method="POST" action="/register">
  <div>
    <input type="text" name="userName" placeholder="User Name">
  </div>
  <div>
    <input type="text" name="password" placeholder="Password"></input>
  </div>
  <button class="mt-3 btn btn-success">Register</button>
</form>

<% if(data) { %>
  <div class="mt-3 alert alert-danger text-black" role="alert"><%= data %> is already exist</div>
<% } %>
